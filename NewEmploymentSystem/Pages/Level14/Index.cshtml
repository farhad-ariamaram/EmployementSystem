@page
@model NewEmploymentSystem.Pages.Level14.IndexModel
@{
    ViewData["Title"] = "مرحله ثبت تألیفات";
}

<partial name="_Steps" model="@ViewData["Level"]" />

<script>
    localStorage.removeItem("gd1");
</script>

<form class="contact3-form validate-form" method="post">
    <span class="contact3-form-title">
        <i class="fa fa-2x fa-newspaper-o"></i>
        <br />
        مرحله ثبت تألیفات
    </span>

    @if (Model.tblUserCompilation.Any())
    {
        <span> تألیفات اضافه شده:</span>
        <ul class="list-group">
            @foreach (var item in Model.tblUserCompilation)
            {
                <li class="list-group-item">@item.Title</li>
            }
        </ul>
    }


<div class="container-contact3-form-btn">
    @if (Model.tblUserCompilation.Any())
    {
    <a class="contact3-form-btn" asp-page="AddCompilation">افزودن تألیف جدید</a>
        <div class="container-contact3-form-btn">
            <button type="submit" class="contact3-form-btn">
                تألیف دیگری ندارم
            </button>
        </div>
    }
    else
    {
<a class="contact3-form-btn" asp-page="AddCompilation">افزودن تألیف جدید</a>
        <div class="container-contact3-form-btn">
            <button type="submit" class="contact3-form-btn">
                تألیف ندارم
            </button>
        </div>
    }

</div>

</form>