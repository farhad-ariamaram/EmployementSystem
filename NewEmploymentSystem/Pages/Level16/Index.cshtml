@page
@model NewEmploymentSystem.Pages.Level16.IndexModel
@{
    ViewData["Title"] = "ثبت کد پستی";
}

<partial name="_Steps" model="@ViewData["Level"]" />

<form class="contact3-form" method="post">
    <span class="contact3-form-title">
        <i class="fa fa-2x fa-lightbulb-o"></i>
        <br />
        ثبت پیشنهادات و انتقادات
    </span>

    <div class="wrap-input3">
        <span asp-validation-for="tblUserSuggestion.Suggestion"></span>
        <textarea asp-for="tblUserSuggestion.Suggestion" class="input3" placeholder="پیشنهادات و انتقادات"></textarea>
        <span class="focus-input3"></span>
    </div>

    <div class="container-contact3-form-btn">
        <button type="submit" class="contact3-form-btn">
            ثبت
        </button>
    </div>

</form>
