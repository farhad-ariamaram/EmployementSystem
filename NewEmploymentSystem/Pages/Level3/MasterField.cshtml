@page
@model NewEmploymentSystem.Pages.Level3.MasterFieldModel
@{
    ViewData["Title"] = "مرحله ثبت مشخصات تحصیلی";
}

    <form onsubmit="return validateForm()" name="myForm" class="contact3-form validate-form" method="post">
        <span class="contact3-form-title">
            <i class="fa fa-2x fa-graduation-cap"></i>
            <br />
            مرحله ثبت مشخصات تحصیلی
        </span>

        <div class="wrap-input3">
            <span style="display:none" class="field-validation-error" id="pcal1error">این فیلد اجباری است</span>
            <span style="display:none" class="field-validation-error" id="pcal2error">فقط از حروف فارسی استفاده کنید</span>
            <span class="placeholderEx">نام رشته تحصیلی خود در مقطع کارشناسی ارشد را وارد کنید</span>
            <input class="input3 justPersian" type="text" name="KarshenasiArshadReshteh" placeholder="رشته تحصیلی مقطع کارشناسی ارشد(فقط حروف فارسی)">
            <span class="focus-input3"></span>
        </div>

        <div class="container-contact3-form-btn">
            <input type="submit" class="contact3-form-btn" value="ثبت" />
        </div>
    </form>

<script>
    function validateForm() {
        Swal.fire({
            html: 'در حال بارگذاری اطلاعات، لطفا منتظر بمانید...',
            allowOutsideClick: false,
            showConfirmButton: false,
            onBeforeOpen: () => {
                Swal.showLoading();
            }
        });

        var text = document.forms["myForm"]["KarshenasiArshadReshteh"].value;
        if (text == "" || text.length < 2) {
            $("#pcal1error").css("display", "block");
            swal.close();
            return false;
        }
        if (!persianRex.text.test(text)) {
            $("#pcal2error").css("display", "block");
            swal.close();
            return false;
        }

        return true;
    }
</script>