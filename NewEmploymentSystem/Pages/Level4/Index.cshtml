@page
@model NewEmploymentSystem.Pages.Level4.IndexModel
@{
    ViewData["Title"] = "مرحله ثبت سوابق شغلی";
}

<partial name="_Steps" model="@ViewData["Level"]" />
<script>
    localStorage.removeItem("sd6");
    localStorage.removeItem("ed6");
</script>
<form class="contact3-form validate-form" method="post">
    <span class="contact3-form-title">
        <img height=80 width=80 src="/images/icons/workexperience.png">
        <br />
        مرحله ثبت سوابق شغلی
    </span>

    @if (Model.workExperiencesList.Any())
    {
        <span>سوابق شغلی اضافه شده:</span>
        <ul class="list-group">
            @foreach (var item in Model.workExperiencesList)
            {
                <li class="list-group-item">
                    @item.FldCompanyName
                </li>
            }
        </ul>
    }

<div class="container-contact3-form-btn">
    @if (Model.workExperiencesList.Any())
    {
        <a class="contact3-form-btn" asp-page="AddExperienceField">افزودن سابقه شغلی دیگر</a>
        <div class="container-contact3-form-btn">
            <button type="submit" class="contact3-form-btn">
                سابقه شغلی دیگری ندارم
            </button>
        </div>
    }
    else
    {
        <a class="contact3-form-btn" asp-page="AddExperienceField">افزودن سابقه شغلی جدید</a>
        <div class="container-contact3-form-btn">
            <button type="submit" class="contact3-form-btn">
                سابقه شغلی ندارم
            </button>
        </div>
    }

</div>

</form>



